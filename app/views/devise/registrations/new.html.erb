<%= content_for :page_title, "Inscription" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Inscription</h2>

  <%= f.label :character_name, "Email address", for: "inputCharacterName", class: "sr-only"%>
  <%= f.text_field :character_name, id: "inputCharacterName", class: "form-control", placeholder: "Character Name", required: "", autofocus: "", data: { order: "first" } %>

  <%= f.label :email, "Email address", for: "inputEmail", class: "sr-only"%>
  <%= f.email_field :email, id: "inputEmail", class: "form-control", placeholder: "Adresse email", required: "", autofocus: "", data: { order: "first" } %>

  <%= f.label :password, "Password", for: "inputPassword", class: "sr-only" %>
  <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Mot de passe", required: "", data: { order: "first" } %>

  <%= f.label :password_confirmation, "Password", for: "inputPasswordConfirmation", class: "sr-only" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", id: "inputPasswordConfirmation", class: "form-control", placeholder: "Confirmation de mot de passe", required: "", data: { order: "last" }%>

  <%= f.submit "CrÃ©er un compte", class: "btn btn-lg btn-primary btn-block" %>

  <%= render "devise/shared/links" %>
<% end %>
