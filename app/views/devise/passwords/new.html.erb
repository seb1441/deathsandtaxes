<h3 class="text-center">Oubli√© votre mot de passe?</h3>
<div class="form-signin">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: "email@example.com", class: "form-control" %>

    <br>
    <%= f.submit "Envoyer email pour reset", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
