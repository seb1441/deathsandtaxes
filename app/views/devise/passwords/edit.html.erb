<br>
<h3 class="text-center">Changer votre mot de passe</h3> 
<div class="form-signin">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: "email@example.com", class: "form-control" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nouveau mot de passe", class: "form-control" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Confirmer mot de passe", class: "form-control" %>
    <br>
    <%= f.submit "Changer mon mot de passe", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
